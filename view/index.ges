table do
  tr do
    td {}
    td {
      form(:action => "/say", :method => "POST") do
        input(:type => "text", :name => "message", :size => 120)
        input(:type => "submit", :value => "add")
      end
    }
  end

  @pager.each do |post|
    tr do
      td(:class => "time"){
        h post.time_str
      }
      td(:class => "message"){
        format_message(h post.message)
      }
    end
  end

end

div(:class => "pager") { @pager.navigation if @pager.needed? }
