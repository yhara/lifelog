%table
  %tr
    %td
    %td
      %form{:action => "/say", :method => "POST"}
        %input{:type => "text", :name => "message", :size => 120}
        %input{:type => "submit", :value => "add"}

  - @pager.each do |post|
    %tr
      %td.time&= post.time_str
      %td.message!= format_message(h post.message)

- if @pager.needed?
  %div.pager
    != @pager.navigation
